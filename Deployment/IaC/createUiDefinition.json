{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "resourceTypes": [
            "microsoft.resources/resourcegroups"
        ],
		"config": {
			"isWizard": false,
			"basics": {
				"description": "Customized description with **markdown**, see [more](https://www.microsoft.com).",				
				"resourceGroup": {
					"constraints": {
						"validations": [
							{
								"isValid": "[not(contains(resourceGroup().name, 'test'))]",
								"message": "Resourceâ€¯group name can't contain 'test'."
							}
						]
					},
					"allowExisting": true
				}
			}
		},
        "basics": [
            {
                "name": "agName",
                "type": "Microsoft.Common.TextBox",
                "label": "Agency Name",
                "defaultValue": "San Diego County Sheriffs Department",
                "toolTip": "",
                "constraints": {
                    "required": true,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "agAbbr",
                "type": "Microsoft.Common.TextBox",
                "label": "Agency Abbreviation",
                "defaultValue": "sdsd",
                "toolTip": "",
                "constraints": {
                    "required": true,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "agapplication",
                "type": "Microsoft.Common.TextBox",
                "label": "Agency Application",
                "defaultValue": "ripa",
                "toolTip": "",
                "constraints": {
                    "required": true,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "appId",
                "type": "Microsoft.Common.TextBox",
                "label": "AppId",
                "defaultValue": "",
                "toolTip": "",
                "constraints": {
                    "required": true,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "tenant",
                "type": "Microsoft.Common.TextBox",
                "label": "Tenant",
                "defaultValue": "",
                "toolTip": "",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "LogAuth",
                "type": "Microsoft.Common.TextBox",
                "label": "Login Authority",
                "defaultValue": "",
                "toolTip": "",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },               
            {
                "name": "DnsSelector",
                "type": "Microsoft.Solutions.ResourceSelector",
                "label": "Dns Zone",
                "resourceType": "Microsoft.Network/dnsZones",
                "options": {
                    "filter": {
                        "subscription": "onBasics"
                    }
                }
            },
            {
                "name": "PrivateDomain",
                "type": "Microsoft.Common.TextBox",
                "label": "Private Domain",
                "defaultValue": "",
                "toolTip": "",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            }   
            
			
        ],
        "steps": [],
        "outputs": {            
            "agency": "[basics('agAbbr')]",
            "application": "[basics('agapplication')]",
            "rg":"[resourceGroup().name]",
            "rgLocation":"[resourceGroup().location]"
        }
    }
}