{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "functions": [
  ],
  "parameters": {
    "utcNowValue": {
      "type": "string",
      "defaultValue": "[utcNow('yyyyMMDDHHmmssFFFF')]"
    },
    "_artifactsLocation": {
      "type": "string",
      "defaultValue": "[deployment().properties.templateLink.uri]",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located."
      }
    },
    "_artifactsLocationSasToken": {
      "type": "secureString",
      "defaultValue": "",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation. When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      }
    },
    "cssaStorageAccountName": {
      "type": "secureString",
      "defaultValue": "#{CSSA_STORAGE_ACCOUNT_NAME}#"
    },
    "cssaStorageAccountKey": {
      "type": "secureString",
      "defaultValue": "#{CSSA_STORAGE_ACCOUNT_KEY}#"
    },
    "cssaSpAppId": {
      "type": "secureString",
      "defaultValue": "#{CSSA_SP_APP_ID}#"
    },
    "cssaSpSecret": {
      "type": "secureString",
      "defaultValue": "#{CSSA_SP_SECRET}#"
    },
    "cssaTenantId": {
      "type": "secureString",
      "defaultValue": "#{CSSA_TENANT_ID}#"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[concat(toLower(take(uniqueString(parameters('utcNowValue')), 3)), 'cssa-app-update-runonce-deleteme-ifucme-dps')]",
      "location": "[resourceGroup().location]",
      "kind": "AzurePowerShell",
      "dependsOn": [],
      "tags": {},
      "properties": {
        "forceUpdateTag": "newGuid()",
        "containerSettings": {
          "containerGroupName": "[concat(toLower(take(uniqueString(parameters('utcNowValue')), 3)), 'cssa-app-update-runonce-deleteme-ifucme-dps')]"
        },
        "storageAccountSettings": {
          "storageAccountName": "[parameters('cssaStorageAccountName')]",
          "storageAccountKey": "[parameters('cssaStorageAccountKey')]"
        },
        "azPowerShellVersion": "3.0",
        "environmentVariables": [
          {
            "name": "CSSA_SP_APP_ID",
            "secureValue": "[parameters('cssaSpAppId')]"
          },
          {
            "name": "CSSA_SP_SECRET",
            "secureValue": "[parameters('cssaSpSecret')]"
          },
          {
            "name": "CSSA_TENANT_ID",
            "value": "[parameters('cssaTenantId')]"
          },
          {
            "name": "APP_SUBSCRIPTION_ID",
            "value": "[subscription().subscriptionId]"
          },
          {
            "name": "APP_RESOURCE_GROUP_NAME",
            "value": "[resourceGroup().name]"
          },
          {
            "name": "DEPLOY_WEB_CONFIG_JSON",
            "value": "False"
          }
        ],
        "primaryScriptUri": "[uri(parameters('_artifactsLocation'), concat('Import-AllRIPAApplications.ps1', parameters('_artifactsLocationSasToken')))]",
        "supportingScriptUris": [
          "[uri(parameters('_artifactsLocation'), concat('Import-ApimApis.psm1', parameters('_artifactsLocationSasToken')))]",
          "[uri(parameters('_artifactsLocation'), concat('New-FunctionHostKey.psm1', parameters('_artifactsLocationSasToken')))]",
          "[uri(parameters('_artifactsLocation'), concat('New-RIPAApimBackend.psm1', parameters('_artifactsLocationSasToken')))]",
          "[uri(parameters('_artifactsLocation'), concat('domain.zip', parameters('_artifactsLocationSasToken')))]",
          "[uri(parameters('_artifactsLocation'), concat('stop.zip', parameters('_artifactsLocationSasToken')))]",
          "[uri(parameters('_artifactsLocation'), concat('submission.zip', parameters('_artifactsLocationSasToken')))]",
          "[uri(parameters('_artifactsLocation'), concat('textanalytics.zip', parameters('_artifactsLocationSasToken')))]",
          "[uri(parameters('_artifactsLocation'), concat('userprofile.zip', parameters('_artifactsLocationSasToken')))]",
          "[uri(parameters('_artifactsLocation'), concat('ui.zip', parameters('_artifactsLocationSasToken')))]"
        ],
        "timeout": "PT4H",
        "cleanupPreference": "OnExpiration",
        "retentionInterval": "PT4H"
      }
    }
  ],
  "outputs": {
  }
}