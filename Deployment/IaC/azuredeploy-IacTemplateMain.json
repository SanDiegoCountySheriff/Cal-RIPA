{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rg": {
            "type": "string"
        },
        "rgLocation": {
            "type": "string"
        },
        "deploy_rg": {
            "defaultValue": true,
            "type": "bool"
        },
        "agency": {
            "type": "string",
            "defaultValue": "sdsd"
        },
        "environment": {
            "type": "string",
            "defaultValue": "d"
        },
        "application": {
            "type": "string",
            "defaultValue": "ripa"
        },
        "templatelinkuri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/SanDiegoCountySheriff/Cal-RIPA/feature/DevOps/Deployment/IaC/azuredeploy-IacTemplateGovMod.json"
        },
        "parameterlinkuri_d": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/SanDiegoCountySheriff/Cal-RIPA/feature/DevOps/Deployment/IaC/azuredeploy-IacTemplateGovMod.parameters.json"
        },
        "parameterlinkuri_q": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/SanDiegoCountySheriff/Cal-RIPA/feature/DevOps/Deployment/IaC/azuredeploy-IacTemplateGovQA.parameters.json"
        },
        "parameterlinkuri_p": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/SanDiegoCountySheriff/Cal-RIPA/feature/DevOps/Deployment/IaC/azuredeploy-IacTemplateGovProd.parameters.json"
        }

    },
    "variables": {
        "rgName": "[concat(parameters('agency'),'-', parameters('application'), '-',parameters('environment'),'-', parameters('rg'))]"
        //"parameterlinkuri": "[or(if(equals(parameters('environment'),'d'), parameters('parameterlinkuri_d'),parameters('parameterlinkuri_q')),if(equals(parameters('environment'),'q'), parameters('parameterlinkuri_q'),parameters('parameterlinkuri_p')),if(equals(parameters('environment'),'p'), parameters('parameterlinkuri_p'),parameters('parameterlinkuri_d')))]"
    },
    "resources": [
        {
            "condition": "[parameters('deploy_rg')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('rgLocation')]",
            "name": "[variables('rgName')]",
            "properties": {}
        },
        {
            "condition": "[and(parameters('deploy_rg'),equals(parameters('environment'),'d'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "DevDeployment",
            "resourceGroup": "[variables('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[parameters('templatelinkuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[parameters('parameterlinkuri_d')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "condition": "[and(parameters('deploy_rg'),equals(parameters('environment'),'q'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "QaDeployment",
            "resourceGroup": "[variables('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[parameters('templatelinkuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[parameters('parameterlinkuri_q')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "condition": "[and(parameters('deploy_rg'),equals(parameters('environment'),'p'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "ProdDeployment",
            "resourceGroup": "[variables('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[parameters('templatelinkuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[parameters('parameterlinkuri_p')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ],
    "outputs": {
        "resourcegroup_name": {
            "condition": "[parameters('deploy_rg')]",
            "type": "string",
            "value": "[variables('rgName')]"
        },
        "subscription": {
            "type": "object",
            "value": "[subscription()]"
        }
    }
}
